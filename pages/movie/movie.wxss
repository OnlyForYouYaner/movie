/* pages/movie/movie.wxss */
Page{
  background-color: #3A3A3A;
}
.content{
  background-color: #3A3A3A;
  min-height: 100%;
}
.slide-image{
  width: 100%;
}
.movie{
  display: flex;
  flex-direction: row;
}
.pic image{
  width: 150px;
  height: 150px;
  margin-top: 5px;
}
.movie-info{
  padding-left: 20px;
}
.base-info{
  color: #fff;
  padding-top: 20px;
  line-height: 20px;
  font-size: 12px;
}
.hr{
  height: 2px;
  width: 100%;
  background-color: black;
  border-top: white solid 1px;
  border-bottom: white solid 1px;
  opacity: 0.2;
}